# ======================================
# HIVE PANEL - ENVIRONMENT CONFIGURATION
# ======================================

# Server Configuration
# --------------------
PORT=3000
NODE_ENV=development

# Session Configuration
# --------------------
# CRITICAL: Generate a secure random session secret using:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# 
# Example (DO NOT USE IN PRODUCTION):
SESSION_SECRET=your_128_character_hex_session_secret_here_replace_with_actual_random_value

# Session duration in milliseconds (default: 10 minutes)
SESSION_MAX_AGE=600000

# Encryption Configuration
# ------------------------
# CRITICAL: Generate a secure encryption key using:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# This key is used for AES-256-GCM encryption of sensitive data (e.g., emails)
# Example (DO NOT USE IN PRODUCTION):
ENCRYPTION_KEY=your_64_character_hex_encryption_key_here_replace_with_actual_random_value

# reCAPTCHA Configuration (Optional)
# ----------------------------------
# Leave empty to disable reCAPTCHA protection
# Get keys from: https://www.google.com/recaptcha/admin
# Choose: reCAPTCHA v2 -> "I'm not a robot" Checkbox
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# Force disable permissions (for debugging only - DANGEROUS!)
# Set to "true" to bypass ALL permission checks
# WARNING: This should ONLY be used for debugging. DO NOT enable in production!
FORCE_DISABLE_PERMISSIONS=false

# Database Configuration
# ---------------------
DB_HOST=localhost
DB_PORT=3306
DB_NAME=hive_panel
DB_USER=root
DB_PASSWORD=

# Optional: Enable SSL for database connection (set to 'true' to enable)
# WARNING: Enabling SSL uses self-signed certificate mode. Only for private/trusted networks.
DB_SSL=false

# Optional: Database timezone (default: 'local', recommended: 'UTC' for consistency)
DB_TIMEZONE=local

# Security Configuration
# ---------------------
# Enable HTTPS enforcement in production
FORCE_HTTPS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5
